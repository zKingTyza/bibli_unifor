<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context=".MainActivity24">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/logo_da_unifor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/logo_unifor" />

        <TextView
            android:id="@+id/textViewEditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/editar_livro"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
            app:layout_constraintTop_toTopOf="@+id/imageViewLogo"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewLogo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageViewBookCover"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:background="@drawable/image_border_background"
                android:contentDescription="@string/capa_do_livro"
                android:layout_marginBottom="24dp"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t_tulo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutTitulo"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/titulo_do_livro">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    tools:text="It - A Coisa" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/url_da_capa"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutUrlCapa"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/url_da_capa">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextUrlCapa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    tools:text="https://example.com/cover.jpg" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutAutor"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/autor">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextAutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    tools:text="Stephen King" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editora"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutEditora"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/editora">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextEditora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    tools:text="Editora XPTO" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutQuantidade"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:hint="Quantidade">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextQuantidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    tools:text="8" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonSalvarAlteracoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/salvar_alteracoes"
                android:textSize="18sp"
                android:backgroundTint="#3498DB"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/nav_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#34495E"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButtonHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_home_button"
            app:srcCompat="@drawable/icons8_home"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/imageButtonProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_profile_button"
            app:srcCompat="@drawable/icons8_users_30"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/imageButtonBooks"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_books_button"
            app:srcCompat="@drawable/icons8_book_50"
            app:tint="@android:color/white"  android:layout_width="0dp"/>

        <ImageButton
            android:id="@+id/imageButtonEvents"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_events_button"
            app:srcCompat="@drawable/icons8_event_48"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/imageButtonNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_notifications_button"
            app:srcCompat="@drawable/notification"
            app:tint="@android:color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
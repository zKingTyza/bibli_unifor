<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context=".MainActivity25">

    <ImageView
        android:id="@+id/imageViewLogoUnifor"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/cd_unifor_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_unifor" />

    <TextView
        android:id="@+id/textViewAdminTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/admin_title"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewLogoUnifor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewLogoUnifor"
        app:layout_constraintTop_toTopOf="@+id/imageViewLogoUnifor" />
    <TextView
        android:id="@+id/textViewNotificacoesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Notificações"
        android:textColor="#2C3E50"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoUnifor" /> <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerViewNotificacoes"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toTopOf="@+id/nav_bottom_bar"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textViewNotificacoesTitle"
    tools:itemCount="3"
    tools:listitem="@layout/item_notificacao_emprestimo" />

    <LinearLayout
        android:id="@+id/nav_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#3F51B5"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButtonHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_home_button"
            app:srcCompat="@drawable/icons8_home"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/imageButtonProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_profile_button"
            app:srcCompat="@drawable/icons8_users_30"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/imageButtonBooks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_books_button"
            app:srcCompat="@drawable/icons8_book_50"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/imageButtonEvents"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_events_button"
            app:srcCompat="@drawable/icons8_event_48"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/imageButtonNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_notifications_button"
            app:srcCompat="@drawable/notification"
            app:tint="@android:color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imageViewCapaResultado"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@drawable/logo_unifor" />

    <TextView
        android:id="@+id/textViewTituloResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewCapaResultado"
        app:layout_constraintTop_toTopOf="@id/imageViewCapaResultado"
        tools:text="Nome do Livro" />

    <TextView
        android:id="@+id/textViewAutorResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/textViewTituloResultado"
        app:layout_constraintStart_toStartOf="@id/textViewTituloResultado"
        app:layout_constraintTop_toBottomOf="@id/textViewTituloResultado"
        tools:text="Nome do Autor" />

</androidx.constraintlayout.widget.ConstraintLayout>

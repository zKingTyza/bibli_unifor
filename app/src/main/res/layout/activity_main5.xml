<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity5">

    <!-- Header (Barra Superior) com MaterialToolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#007BFF"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@android:color/white"
        app:title="Configurações"
        app:titleTextColor="@android:color/white" />

    <!-- Opção Geral -->
    <TextView
        android:id="@+id/option_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="Geral"
        android:textSize="18sp" />

    <!-- Opção Acessibilidade -->
    <TextView
        android:id="@+id/option_accessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="Acessibilidade"
        android:textSize="18sp" />

    <!-- Opção Editar Perfil -->
    <TextView
        android:id="@+id/option_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="@string/editar_perfil"
        android:textSize="18sp" />

    <!-- Opção Sair (agora abaixo de Editar Perfil) -->
    <TextView
        android:id="@+id/text_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="@string/sair"
        android:textColor="?attr/colorError"
        android:textSize="18sp" />

</LinearLayout>

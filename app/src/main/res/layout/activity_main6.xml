<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity6">

    <!-- Header (Barra Superior) com MaterialToolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#007BFF"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@android:color/white"
        app:title="Acessibilidade"
        app:titleTextColor="@android:color/white" />

    <!-- Categoria Visual -->
    <TextView
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Visual"
        android:textStyle="bold" />

    <!-- Opção de Modo Escuro com MaterialSwitch -->
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switch_dark_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:checked="false"
        android:text="Modo Escuro"
        android:textSize="16sp" />

    <!-- Opção Tamanho da Fonte -->
    <TextView
        android:id="@+id/option_font_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="Tamanho da Fonte"
        android:textSize="16sp" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?><selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cor para o item quando está selecionado (ativo) -->
    <item android:state_checked="true" android:color="@android:color/white" />

    <!-- Cor para os itens quando não estão selecionados (inativo) -->
    <item android:state_checked="false" android:color="#A9A9A9" /> <!-- Um cinza mais visível -->
</selector>
